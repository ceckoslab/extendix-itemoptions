<config>
	<modules>
		<Extendix_ItemOptions>
			<version>0.0.1</version>
		</Extendix_ItemOptions>
	</modules>

    <global>
        <blocks>
            <extendix_itemoptions>
                <class>Extendix_ItemOptions_Block</class>
            </extendix_itemoptions>
        </blocks>
        <helpers>
            <extendix_itemoptions>
                <class>Extendix_ItemOptions_Helper</class>
            </extendix_itemoptions>
        </helpers>
    </global>

    <admin>
        <routers>
            <extendix_itemoptions>
                <use>admin</use>
                <args>
                    <module>Extendix_ItemOptions_Adminhtml</module>
                    <frontName>extendix_itemoptions</frontName>
                </args>
            </extendix_itemoptions>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <extendix_itemoptions>
                    <file>extendix/extendix_itemoptions.xml</file>
                </extendix_itemoptions>
            </updates>
        </layout>
    </adminhtml>

</config>